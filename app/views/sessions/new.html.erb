<div class="container">
  <h1>Login</h1>
  <%= form_with url: sessions_path, method: :post, class: 'form-group'  do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Login" %>
    </div>
  <% end %>

  <%= link_to 'Back', root_path %>
</div>